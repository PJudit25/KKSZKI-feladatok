<Window x:Class="IskolaWPF2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IskolaWPF2"
        mc:Ignorable="d"
        Title="IskolaGUI" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="223*"/>
            <ColumnDefinition Width="577*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="ListBox" HorizontalAlignment="Left" Height="281" Margin="60,20,0,0" VerticalAlignment="Top" Width="177" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="2"/>
        <Button x:Name="MentésGomb" Content="Állomány mentése" HorizontalAlignment="Left" Height="38" Margin="146,329,0,0" VerticalAlignment="Top" Width="85" Click="MentésGomb_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="TorlesGomb" Content="Törlés" HorizontalAlignment="Left" Height="38" Margin="56,329,0,0" VerticalAlignment="Top" Width="85" Click="TorlesGomb_Click"/>

    </Grid>
</Window>
